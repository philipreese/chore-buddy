<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ChoreBuddy.ViewModels"
             x:Class="ChoreBuddy.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="Settings">    

    <Grid ColumnDefinitions="*, Auto"
          VerticalOptions="Start"
          Padding="10">
        <VerticalStackLayout Grid.Column="0"
                             VerticalOptions="Center">
            <Label Text="Haptic Feedback" 
                   FontSize="18" 
                   FontAttributes="Bold" />
            <Label Text="Vibrate when completing chores" 
                   FontSize="14" 
                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}" />
        </VerticalStackLayout>

        <Switch Grid.Column="1" 
                IsToggled="{Binding IsHapticFeedbackEnabled}" 
                OnColor="{StaticResource Secondary}" />
    </Grid>
</ContentPage>