<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChoreBuddy.Views.AboutPage"
             Title="About Chore Buddy"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray900}}">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Hero Header with Gradient -->
            <Grid HeightRequest="250">
                <BoxView>
                    <BoxView.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource Primary}" Offset="0.1" />
                            <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
                        </LinearGradientBrush>
                    </BoxView.Background>
                </BoxView>

                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <Border StrokeShape="RoundRectangle 25" 
                           HeightRequest="100" 
                           WidthRequest="100" 
                           Padding="15">
                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="0,5" Radius="10" Opacity="0.2" />
                        </Border.Shadow>
                        <Image Source="splash.png"
                               Aspect="AspectFill"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HeightRequest="100"
                               WidthRequest="100"/>
                    </Border>
                    <Label Text="CHORE BUDDY" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Your household superhero." 
                           FontSize="14" 
                           TextColor="White" 
                           Opacity="0.8"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Info Section -->
            <VerticalStackLayout Padding="20"
                                 Spacing="20"
                                 Margin="0,-30,0,0">

                <!-- App Details Card -->
                <Border StrokeShape="RoundRectangle 15"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}"
                        Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="&#xf05a;"
                                   FontFamily="FontAwesome"
                                   TextColor="{StaticResource Primary}"
                                   VerticalOptions="Center"/>
                            <Label Text="Application Info"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"/>

                        <Grid ColumnDefinitions="*, Auto"
                              RowDefinitions="Auto, Auto, Auto, Auto"
                              RowSpacing="10">
                            <Label Text="Version"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"/>
                            <Label Grid.Column="1"
                                   Text="{Binding Version}"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"
                                   FontAttributes="Bold"/>

                            <Label Grid.Row="1"
                                   Text="Build"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   Text="{Binding Build}"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"
                                   FontAttributes="Bold"/>

                            <Label Grid.Row="2"
                                   Text="Package"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"/>
                            <Label Grid.Row="2"
                                   Grid.Column="1"
                                   Text="{Binding PackageName}"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"
                                   FontAttributes="Bold"/>

                            <Label Grid.Row="3"
                                   Text="Developer"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"/>
                            <Label Grid.Row="3"
                                   Grid.Column="1"
                                   Text="Philip Reese"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"
                                   FontAttributes="Bold"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Tech Stack Chips -->
                <Label Text="Powered By"
                       HorizontalTextAlignment="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}"
                       FontSize="14"
                       Margin="0,10,0,0"/>
                <FlexLayout Wrap="Wrap"
                            JustifyContent="Center"
                            AlignItems="Center"
                            Padding="10">
                    <Border Margin="5"
                            Padding="10,5"
                            StrokeShape="RoundRectangle 15"
                            BackgroundColor="{StaticResource Primary}"
                            Stroke="Transparent">
                        <Label Text=".NET MAUI"
                               TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Border>
                    <Border Margin="5"
                            Padding="10,5"
                            StrokeShape="RoundRectangle 15"
                            BackgroundColor="{StaticResource Secondary}"
                            Stroke="Transparent">
                        <Label Text="SQLite"
                               TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Border>
                    <Border Margin="5"
                            Padding="10,5"
                            StrokeShape="RoundRectangle 15"
                            BackgroundColor="{StaticResource Magenta}"
                            Stroke="Transparent">
                        <Label Text="MVVM Toolkit"
                               TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Border>
                </FlexLayout>

                <Button Text="Visit Website" 
                        BackgroundColor="Transparent" 
                        FontSize="18"
                        TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Secondary}}" 
                        BorderWidth="2" 
                        BorderColor="{StaticResource Primary}"
                        Margin="40,20"
                        CornerRadius="20"
                        Clicked="WebsiteButton_Clicked"/>

                <Label Text="Â© 2025 Chore Buddy Inc." 
                       HorizontalTextAlignment="Center" 
                       FontSize="12" 
                       TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray300}}" 
                       Margin="0,20"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>