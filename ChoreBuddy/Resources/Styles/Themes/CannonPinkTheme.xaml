<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="ChoreBuddy.Resources.Styles.Themes.CannonPinkTheme">

    <!-- ===== Brand ===== -->
    <Color x:Key="PrimaryLight">#874B6D</Color>
    <Color x:Key="PrimaryDark">#FBB0D8</Color>
    <Color x:Key="PrimaryLightBright">#AB8199</Color>
    <Color x:Key="PrimaryLightDim">#5E354C</Color>
    <Color x:Key="PrimaryDarkBright">#FCC8E4</Color>
    <Color x:Key="PrimaryDarkDim">#B07B97</Color>

    <Color x:Key="SecondaryLight">#715764</Color>
    <Color x:Key="SecondaryDark">#DFBECD</Color>

    <Color x:Key="TertiaryLight">#80543C</Color>
    <Color x:Key="TertiaryDark">#F3BA9C</Color>

    <!-- ===== Surfaces ===== -->
    <Color x:Key="SurfaceLight">#FFF8F8</Color>
    <Color x:Key="SurfaceDark">#181115</Color>

    <Color x:Key="SurfaceContainerLight">#F9EAEF</Color>
    <Color x:Key="SurfaceContainerDark">#251E21</Color>

    <Color x:Key="SurfaceContainerLightDim">#EDDFE3</Color>
    <Color x:Key="SurfaceContainerDarkBright">#3B3236</Color>

    <Color x:Key="PrimaryContainerLight">#FFD8EA</Color>
    <Color x:Key="PrimaryContainerDark">#6B3455</Color>

    <Color x:Key="SecondaryContainerLight">#FCD9E9</Color>
    <Color x:Key="SecondaryContainerDark">#58404C</Color>

    <Color x:Key="TertiaryContainerLight">#FFDBCA</Color>
    <Color x:Key="TertiaryContainerDark">#653D26</Color>

    <!-- ===== Error ===== -->
    <Color x:Key="ErrorLight">#BA1A1A</Color>
    <Color x:Key="ErrorDark">#FFB4AB</Color>
    <Color x:Key="WarningLight">#6A6200</Color>
    <Color x:Key="WarningDark">#D3C972</Color>

    <!-- ===== Text ===== -->
    <Color x:Key="OnPrimaryLight">#FFFFFF</Color>
    <Color x:Key="OnPrimaryDark">#511D3E</Color>

    <Color x:Key="OnSecondaryLight">#FFFFFF</Color>
    <Color x:Key="OnSecondaryDark">#402A36</Color>

    <Color x:Key="OnTertiaryLight">#FFFFFF</Color>
    <Color x:Key="OnTertiaryDark">#4A2712</Color>

    <Color x:Key="OnErrorLight">#FFFFFF</Color>
    <Color x:Key="OnErrorDark">#690005</Color>

    <Color x:Key="OnSurfaceLight">#211A1D</Color>
    <Color x:Key="OnSurfaceDark">#EDDFE3</Color>

    <Color x:Key="OutlineLight">#827379</Color>
    <Color x:Key="OutlineDark">#9C8D93</Color>

    <Color x:Key="OnTertiaryContainerLight">#653D26</Color>
    <Color x:Key="OnTertiaryContainerDark">#FFDBCA</Color>
    
</ResourceDictionary>