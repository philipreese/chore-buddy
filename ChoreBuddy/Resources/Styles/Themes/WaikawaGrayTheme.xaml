<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="ChoreBuddy.Resources.Styles.Themes.WaikawaGrayTheme">

    <!-- ===== Brand ===== -->
    <Color x:Key="PrimaryLight">#595992</Color>
    <Color x:Key="PrimaryDark">#C2C1FF</Color>
    <Color x:Key="PrimaryLightBright">#8B8BB3</Color>
    <Color x:Key="PrimaryLightDim">#3E3E66</Color>
    <Color x:Key="PrimaryDarkBright">#D4D3FF</Color>
    <Color x:Key="PrimaryDarkDim">#8887B3</Color>

    <Color x:Key="SecondaryLight">#5D5C72</Color>
    <Color x:Key="SecondaryDark">#C6C4DD</Color>

    <Color x:Key="TertiaryLight">#795369</Color>
    <Color x:Key="TertiaryDark">#E9B9D2</Color>

    <!-- ===== Surfaces ===== -->
    <Color x:Key="SurfaceLight">#FCF8FF</Color>
    <Color x:Key="SurfaceDark">#131318</Color>

    <Color x:Key="SurfaceContainerLight">#F0ECF4</Color>
    <Color x:Key="SurfaceContainerDark">#1F1F25</Color>

    <Color x:Key="SurfaceContainerLightDim">#E4E1E9</Color>
    <Color x:Key="SurfaceContainerDarkBright">#35343A</Color>

    <Color x:Key="PrimaryContainerLight">#E2DFFF</Color>
    <Color x:Key="PrimaryContainerDark">#414178</Color>

    <Color x:Key="SecondaryContainerLight">#E2E0F9</Color>
    <Color x:Key="SecondaryContainerDark">#454559</Color>

    <Color x:Key="TertiaryContainerLight">#FFD8EB</Color>
    <Color x:Key="TertiaryContainerDark">#5F3C51</Color>

    <!-- ===== Error ===== -->
    <Color x:Key="ErrorLight">#BA1A1A</Color>
    <Color x:Key="ErrorDark">#FFB4AB</Color>
    <Color x:Key="WarningLight">#6A6200</Color>
    <Color x:Key="WarningDark">#D3C972</Color>

    <!-- ===== Text ===== -->
    <Color x:Key="OnPrimaryLight">#FFFFFF</Color>
    <Color x:Key="OnPrimaryDark">#2A2A60</Color>

    <Color x:Key="OnSecondaryLight">#FFFFFF</Color>
    <Color x:Key="OnSecondaryDark">#2F2F42</Color>

    <Color x:Key="OnTertiaryLight">#FFFFFF</Color>
    <Color x:Key="OnTertiaryDark">#46263A</Color>

    <Color x:Key="OnErrorLight">#FFFFFF</Color>
    <Color x:Key="OnErrorDark">#690005</Color>

    <Color x:Key="OnSurfaceLight">#1B1B21</Color>
    <Color x:Key="OnSurfaceDark">#E4E1E9</Color>

    <Color x:Key="OutlineLight">#777680</Color>
    <Color x:Key="OutlineDark">#918F9A</Color>

    <Color x:Key="OnTertiaryContainerLight">#5F3C51</Color>
    <Color x:Key="OnTertiaryContainerDark">#FFD8EB</Color>
    
</ResourceDictionary>