<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:ChoreBuddy.Models">

    <!-- ===== Page ===== -->
    <Style x:Key="PageRoot" TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}" />
    </Style>

    <!-- ===== Typography ===== -->
    <Style TargetType="Label">
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
    <Style x:Key="AppTitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" />
    </Style>

    <Style x:Key="HeaderText" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceLight}, Dark={StaticResource OnSurfaceDark}}" />
    </Style>
    
    <Style x:Key="BodyText" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceLight}, Dark={StaticResource OnSurfaceDark}}" />
    </Style>

    <Style x:Key="SubtitleText" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OutlineLight}, Dark={StaticResource OutlineDark}}" />
    </Style>

    <!-- ===== Cards ===== -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SurfaceContainerLight}, Dark={StaticResource SurfaceContainerDark}}" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="StrokeShape" Value="RoundRectangle 24" />
        <Setter Property="MinimumHeightRequest" Value="72" />
    </Style>

    <!-- ===== Tags ===== -->
    <DataTemplate x:Key="TagTemplate" x:DataType="models:Tag">
        <Border Padding="10,3"
                Margin="0,3,2,3"
                StrokeShape="RoundRectangle 12"
                BackgroundColor="{Binding ColorHex}">
            <Label Text="{Binding Name}"
                   FontSize="13"
                   FontAttributes="Bold"
                   Shadow="0 1 0.5 Black 0.5"
                   TextColor="White"/>
        </Border>
    </DataTemplate>

    <Style x:Key="ChipBorder" TargetType="Border" x:DataType="models:Tag">
        <Setter Property="Padding" Value="15,5" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Style.Triggers>
            <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                <Setter Property="BackgroundColor" Value="{Binding ColorHex}" />
                <Setter Property="Stroke" Value="Transparent" />
            </DataTrigger>
            <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="False">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SurfaceContainerLight}, Dark={StaticResource SurfaceContainerDark}}" />
                <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource OutlineLight}, Dark={StaticResource OutlineDark}}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ChipLabel" TargetType="Label" x:DataType="models:Tag">
        <Style.Triggers>
            <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="True">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Shadow" Value="0 1 0.5 Black 0.5" />
            </DataTrigger>
            <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="False">
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnSurfaceLight}, Dark={StaticResource OnSurfaceDark}}" />
                <Setter Property="Shadow" Value="{x:Null}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <DataTemplate x:Key="FilterChipTemplate" x:DataType="models:Tag">
        <Border Style="{StaticResource ChipBorder}">
            <Border.GestureRecognizers>
                <TapGestureRecognizer 
                    Command="{Binding BindingContext.ToggleTagCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}, x:DataType={x:Null}}"
                    CommandParameter="{Binding .}" />
            </Border.GestureRecognizers>

            <Label Text="{Binding Name}" 
                   Padding="1,0"
                   FontSize="16"
                   Style="{StaticResource ChipLabel}" />
        </Border>
    </DataTemplate>

    <Style x:Key="TechStackChip" TargetType="Border">
        <Setter Property="Padding" Value="15,5" />
        <Setter Property="Margin" Value="0,0,4,8" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource TertiaryContainerLight}, Dark={StaticResource TertiaryContainerDark}}" />
    </Style>
    
    <Style x:Key="TechStackChipLabel" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnTertiaryContainerLight}, Dark={StaticResource OnTertiaryContainerDark}}" />
    </Style>

    <!-- ===== Buttons ===== -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnPrimaryLight}, Dark={StaticResource OnPrimaryDark}}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="16,10" />
    </Style>

    <Style x:Key="TertiaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource TertiaryLight}, Dark={StaticResource TertiaryDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnTertiaryLight}, Dark={StaticResource OnTertiaryDark}}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="16,10" />
    </Style>
    
    <Style x:Key="TertiaryAltButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource OnTertiaryContainerDark}, Dark={StaticResource OnTertiaryContainerLight}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TertiaryContainerDark}, Dark={StaticResource TertiaryContainerLight}}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="16,10" />
    </Style>

    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnPrimaryLight}, Dark={StaticResource OnPrimaryDark}}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="WidthRequest" Value="56" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="FontSize" Value="28" />
    </Style>

    <Style x:Key="FloatingActionButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnPrimaryLight}, Dark={StaticResource OnPrimaryDark}}" />
        <Setter Property="CornerRadius" Value="40" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="Margin" Value="12" />
        <Setter Property="VerticalOptions" Value="End" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="WidthRequest" Value="64" />
        <Setter Property="HeightRequest" Value="64" />
        <Setter Property="Shadow" Value="-1 1 3 #333333 0.6" />
    </Style>

    <!-- ===== Others ===== -->
    
    <Style TargetType="ActivityIndicator">
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" 
            Value="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}" />
        <Setter Property="Shell.ForegroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="Shell.TitleColor" 
            Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" />

        <Setter Property="Shell.TabBarBackgroundColor" 
            Value="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryLight}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{AppThemeBinding Light={StaticResource OutlineLight}, Dark={StaticResource OutlineDark}}" />

        <Setter Property="Shell.NavBarHasShadow" Value="False" />
    </Style>

    <LinearGradientBrush x:Key="AboutGradient" StartPoint="1,0" EndPoint="1,1">
        <GradientStop Color="{AppThemeBinding
            Light={StaticResource PrimaryLightBright},
            Dark={StaticResource PrimaryDarkDim}}"  />
        <GradientStop Color="{AppThemeBinding
            Light={StaticResource PrimaryLightDim},
            Dark={StaticResource PrimaryDarkBright}}"  Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>
