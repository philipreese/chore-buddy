<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:models="clr-namespace:ChoreBuddy.Models"
                    xmlns:vm="clr-namespace:ChoreBuddy.ViewModels"
                    xmlns:conv="clr-namespace:ChoreBuddy.Converters"
                    x:Class="ChoreBuddy.Resources.Styles.Styles">

    <conv:SortOrderToColorConverter x:Key="SortOrderToColorConverter" ActiveBaseKey="Primary" InactiveKey="OutlineLight" />
    <conv:SortOrderToColorConverter x:Key="SortOrderToTextColorConverter" ActiveBaseKey="OnPrimary" InactiveKey="OnPrimaryLight" />

    <!-- ===== Page ===== -->
    <Style x:Key="PageRoot" TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource SurfaceLight}, Dark={DynamicResource SurfaceDark}}" />
    </Style>

    <!-- ===== Typography ===== -->
    <Style TargetType="Label">
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
    <Style x:Key="AppTitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource PrimaryLight}, Dark={DynamicResource PrimaryDark}}" />
    </Style>

    <Style x:Key="HeaderText" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource OnSurfaceLight}, Dark={DynamicResource OnSurfaceDark}}" />
    </Style>

    <Style x:Key="BodyText" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource OnSurfaceLight}, Dark={DynamicResource OnSurfaceDark}}" />
    </Style>

    <Style x:Key="GrayBodyText" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource OutlineLight}, Dark={DynamicResource OutlineDark}}" />
    </Style>

    <Style x:Key="MenuText" TargetType="Label">
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="Padding" Value="0,5" />
        <Setter Property="CharacterSpacing" Value="2" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource OnSurfaceLight}, Dark={DynamicResource OnSurfaceDark}}" />
    </Style>

    <!-- ===== Cards ===== -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource SurfaceContainerLight}, Dark={DynamicResource SurfaceContainerDark}}" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="StrokeShape" Value="RoundRectangle 24" />
        <Setter Property="MinimumHeightRequest" Value="72" />
    </Style>

    <!-- ===== Tags ===== -->
    <DataTemplate x:Key="TagTemplate" x:DataType="models:Tag">
        <Border Padding="10,0"
                Margin="0,3,2,3"
                StrokeShape="RoundRectangle 12"
                BackgroundColor="{Binding ColorHex}">
            <Label Text="{Binding Name}"
                   FontSize="13"
                   VerticalTextAlignment="Center"
                   FontAttributes="Bold"
                   Shadow="0 1 0.5 Black 0.5"
                   TextColor="White"/>
        </Border>
    </DataTemplate>

    <Style x:Key="ChipBorder" TargetType="Border" x:DataType="models:Tag">
        <Setter Property="Padding" Value="15,5" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource SurfaceContainerLight}, Dark={DynamicResource SurfaceContainerDark}}" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={DynamicResource OutlineLight}, Dark={DynamicResource OutlineDark}}" />
        <Style.Triggers>
            <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                <Setter Property="BackgroundColor" Value="{Binding ColorHex}" />
                <Setter Property="Stroke" Value="Transparent" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ChipLabel" TargetType="Label" x:DataType="models:Tag">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource OnSurfaceLight}, Dark={DynamicResource OnSurfaceDark}}" />
        <Style.Triggers>
            <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="True">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Shadow" Value="0 1 0.5 Black 0.5" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <DataTemplate x:Key="FilterChipTemplate" x:DataType="models:Tag">
        <Border x:Name="ChipBorder" Style="{StaticResource ChipBorder}">
            <Border.GestureRecognizers>
                <TapGestureRecognizer 
                    BindingContext="{Binding BindingContext, Source={RelativeSource AncestorType={x:Type ContentPage}}, x:DataType={x:Type ContentPage}}"
                    Command="{Binding ToggleTagCommand, x:DataType=vm:ITagManager}"
                    CommandParameter="{Binding BindingContext, Source={x:Reference ChipBorder}, x:DataType={x:Type Border}}" />
            </Border.GestureRecognizers>

            <Label Text="{Binding Name}" 
                   Padding="1,0"
                   FontSize="16"
                   Style="{StaticResource ChipLabel}" />
        </Border>
    </DataTemplate>

    <Style x:Key="TechStackChip" TargetType="Border">
        <Setter Property="Padding" Value="15,5" />
        <Setter Property="Margin" Value="0,0,4,8" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource TertiaryContainerLight}, Dark={DynamicResource TertiaryContainerDark}}" />
    </Style>

    <Style x:Key="TechStackChipLabel" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource OnTertiaryContainerLight}, Dark={DynamicResource OnTertiaryContainerDark}}" />
    </Style>

    <!-- ===== Buttons ===== -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource PrimaryLight}, Dark={DynamicResource PrimaryDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource OnPrimaryLight}, Dark={DynamicResource OnPrimaryDark}}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1" />
                            <Setter Property="TranslationY" Value="0" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.9" />
                            <Setter Property="TranslationY" Value="2" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}" />

    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="TertiaryButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource TertiaryLight}, Dark={DynamicResource TertiaryDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource OnTertiaryLight}, Dark={DynamicResource OnTertiaryDark}}" />
    </Style>

    <Style x:Key="TertiaryAltButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource OnTertiaryContainerDark}, Dark={DynamicResource OnTertiaryContainerLight}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource TertiaryContainerDark}, Dark={DynamicResource TertiaryContainerLight}}" />
    </Style>

    <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="WidthRequest" Value="56" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="FontSize" Value="28" />
    </Style>

    <Style x:Key="FloatingActionButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="CornerRadius" Value="40" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="Margin" Value="12" />
        <Setter Property="VerticalOptions" Value="End" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="WidthRequest" Value="64" />
        <Setter Property="HeightRequest" Value="64" />
        <Setter Property="Shadow" Value="-1 1 3 #333333 0.6" />
    </Style>

    <Style x:Key="MenuButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource SurfaceContainerLight}, Dark={DynamicResource SurfaceContainerDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource OnSurfaceLight}, Dark={DynamicResource OnSurfaceDark}}" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="Padding" Value="0,10" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="SortingChipStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HeightRequest" Value="32" />
        <Setter Property="Padding" Value="15,0" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="TextColor" Value="{DynamicResource OnPrimaryLight}" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!-- ===== Others ===== -->

    <Style TargetType="ActivityIndicator">
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Color" Value="{AppThemeBinding Light={DynamicResource PrimaryLight}, Dark={DynamicResource PrimaryDark}}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" 
        Value="{AppThemeBinding Light={DynamicResource SurfaceLight}, Dark={DynamicResource SurfaceDark}}" />
        <Setter Property="Shell.ForegroundColor" Value="{AppThemeBinding Light={DynamicResource PrimaryLight}, Dark={DynamicResource PrimaryDark}}" />
        <Setter Property="Shell.TitleColor" 
        Value="{AppThemeBinding Light={DynamicResource PrimaryLight}, Dark={DynamicResource PrimaryDark}}" />
        <Setter Property="Shell.TabBarBackgroundColor" 
        Value="{AppThemeBinding Light={DynamicResource SurfaceLight}, Dark={DynamicResource SurfaceDark}}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{AppThemeBinding Light={DynamicResource PrimaryLight}, Dark={DynamicResource PrimaryDark}}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{AppThemeBinding Light={DynamicResource OutlineLight}, Dark={DynamicResource OutlineDark}}" />
    </Style>

    <LinearGradientBrush x:Key="AboutGradient" StartPoint="1,0" EndPoint="1,1">
        <GradientStop Color="{AppThemeBinding
            Light={DynamicResource PrimaryLightBright},
            Dark={DynamicResource PrimaryDarkDim}}"  />
        <GradientStop Color="{AppThemeBinding
            Light={DynamicResource PrimaryLightDim},
            Dark={DynamicResource PrimaryDarkBright}}"
                      Offset="1.0" />
    </LinearGradientBrush>

    <ControlTemplate x:Key="HeroEmptyStateTemplate"
                 x:DataType="models:EmptyStateInfo">
        <VerticalStackLayout Spacing="20" 
                         ZIndex="100"
                         VerticalOptions="Center" 
                         HorizontalOptions="Center" 
                         Padding="40">

            <Border StrokeShape="RoundRectangle 45" 
                HeightRequest="120" 
                WidthRequest="120" 
                Padding="20"
                HorizontalOptions="Center"
                BackgroundColor="{AppThemeBinding Light={DynamicResource SurfaceContainerLight}, Dark={DynamicResource SurfaceContainerDark}}">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,5" Opacity="0.1" Radius="10" />
                </Border.Shadow>
                <Image Source="{Binding Icon}"
                   Aspect="AspectFit" />
            </Border>

            <VerticalStackLayout Spacing="8"
                             HorizontalOptions="Center">
                <Label Text="{Binding Title}" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={DynamicResource PrimaryLight}, Dark={DynamicResource PrimaryDark}}" />

                <Label Text="{Binding Description}"
                   FontSize="16" 
                   LineHeight="1.2"
                   TextColor="{AppThemeBinding Light={DynamicResource SecondaryLight}, Dark={DynamicResource SecondaryDark}}"
                   HorizontalTextAlignment="Center"
                   MaxLines="3" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ControlTemplate>
    
</ResourceDictionary>